<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Listado de Personas</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center mb-4">Listado Completo de Personas</h1>
        <a href="/" class="btn btn-primary mb-3">Volver al Formulario</a>

        <% if (personas.length > 0) { %>
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Nombre</th>
                            <th>Apellido</th>
                            <th>Edad</th>
                            <th>Sexo</th>
                            <th>Documento</th>
                            <th>Email</th>
                            <th>Teléfono</th>
                            <th>Hijos</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% personas.forEach(persona => { %>
                            <tr>
                                <td><%= persona.nombre %></td>
                                <td><%= persona.apellido %></td>
                                <td><%= persona.edad || 'N/A' %></td>
                                <td><%= persona.sexo || 'N/A' %></td>
                                <td><%= persona.documento || 'N/A' %></td>
                                <td><%= persona.email %></td>
                                <td><%= persona.telefono || 'N/A' %></td>
                                <td><%= persona.hijos || 0 %></td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        <% } else { %>
            <div class="alert alert-info">No hay personas registradas aún.</div>
        <% } %>
    </div>
</body>
</html>