<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>Ejercicio 9 - forEach()</title>
</head>
<body class="container mt-4">
    <h1>Ejercicio 9 - forEach()</h1>

    <!-- Primer inciso: Saludo a nombres -->
    <div class="card mb-4">
        <div class="card-body">
            <h3>Saludar nombres</h3>
            <form id="formNombres">
                <div class="mb-3">
                    <input type="text" class="form-control" id="inputNombre" placeholder="Ingrese un nombre" required>
                </div>
                <button type="submit" class="btn btn-success">Agregar nombre</button>
            </form>
            <button id="saludarNombres" class="btn btn-primary mt-3">Mostrar saludos</button>
            <div id="resultadoNombres" class="mt-3"></div>
        </div>
    </div>

    <!-- Segundo inciso: Doble de números -->
    <div class="card mb-4">
        <div class="card-body">
            <h3>Mostrar doble de números</h3>
            <form id="formNumeros">
                <div class="mb-3">
                    <input type="number" class="form-control" id="inputNumero" placeholder="Ingrese un número" required>
                </div>
                <button type="submit" class="btn btn-success">Agregar número</button>
            </form>
            <button id="mostrarDobles" class="btn btn-primary mt-3">Mostrar dobles</button>
            <div id="resultadoNumeros" class="mt-3"></div>
        </div>
    </div>

    <!-- Tercer inciso: Mostrar personas -->
    <div class="card mb-4">
        <div class="card-body">
            <h3>Mostrar personas (nombre y edad)</h3>
            <form id="formPersonas">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <input type="text" class="form-control" id="inputPersonaNombre" placeholder="Nombre" required>
                    </div>
                    <div class="col-md-6 mb-3">
                        <input type="number" class="form-control" id="inputPersonaEdad" placeholder="Edad" required min="0">
                    </div>
                </div>
                <button type="submit" class="btn btn-success">Agregar persona</button>
            </form>
            <button id="mostrarPersonas" class="btn btn-primary mt-3">Mostrar personas</button>
            <div id="resultadoPersonas" class="mt-3"></div>
        </div>
    </div>

    <script src="/scripts/ejercicio9.js"></script>  
</body>
</html>