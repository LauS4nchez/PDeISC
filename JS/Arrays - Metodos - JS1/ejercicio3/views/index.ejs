<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>Document</title>
</head>
<body class="container mt-4">
    <h1>Ejercicio 3</h1>

    <!-- Formulario para los colores -->
    <div class="card mb-4">
        <div class="card-body">
            <h3>Agregar Color</h3>
            <form id="formColor">
                <div class="mb-3">
                    <input type="text" class="form-control" id="inputColor" placeholder="Agregue un color" required>
                </div>
                <button type="submit" class="btn btn-success">Agregar Color</button>
            </form>
            <button id="desplegarColores" class="btn btn-primary mt-3">Mostrar Colores</button>
            <div id="colores" class="mt-3">

            </div>
        </div>
    </div>

    <!-- Formulario para las tareas -->
    <div class="card mb-4">
        <div class="card-body">
            <h3>Agregar tarea urgente</h3>
            <form id="formTareas">
                <div class="mb-3">
                    <input type="text" class="form-control" id="inputTarea" placeholder="Agregue una tarea urgente" required>
                </div>
                <button type="submit" class="btn btn-success">Agregar tarea urgente</button>
            </form>
            <button id="desplegarTareas" class="btn btn-primary mt-3">Mostrar Tareas</button>
            <div id="tareas" class="mt-3">

            </div>
        </div>
    </div>

    <!-- Formulario para los usuarios -->
    <div class="card mb-4">
        <div class="card-body">
            <h3>Agregar usuario</h3>
            <form id="formUsuarios">
                <div class="mb-3">
                    <input type="text" class="form-control" id="inputUsuario" placeholder="Agregue un usuario" required>
                </div>
                <button type="submit" class="btn btn-success">Agregar el usuario</button>
            </form>
            <button id="desplegarUsuarios" class="btn btn-primary mt-3">Mostrar Usuarios</button>
            <div id="usuarios" class="mt-3">

            </div>
        </div>
    </div>


    <script src="/scripts/ejercicio3.js"></script>  
</body>
</html>