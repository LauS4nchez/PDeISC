<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>Ejercicio 12 - reduce()</title>
</head>
<body class="container mt-4">
    <h1>Ejercicio 12 - reduce()</h1>

    <!-- Primer inciso: Suma de números -->
    <div class="card mb-4">
        <div class="card-body">
            <h3>Sumar todos los números</h3>
            <form id="formSuma">
                <div class="mb-3">
                    <input type="number" class="form-control" id="inputSumaNumero" placeholder="Ingrese un número" required>
                </div>
                <button type="submit" class="btn btn-success">Agregar número</button>
            </form>
            <button id="calcularSuma" class="btn btn-primary mt-3">Calcular suma total</button>
            <div id="resultadoSuma" class="mt-3"></div>
        </div>
    </div>

    <!-- Segundo inciso: Multiplicación de números -->
    <div class="card mb-4">
        <div class="card-body">
            <h3>Multiplicar todos los números</h3>
            <form id="formMultiplicacion">
                <div class="mb-3">
                    <input type="number" class="form-control" id="inputMultiNumero" placeholder="Ingrese un número" required>
                </div>
                <button type="submit" class="btn btn-success">Agregar número</button>
            </form>
            <button id="calcularMultiplicacion" class="btn btn-primary mt-3">Calcular producto</button>
            <div id="resultadoMultiplicacion" class="mt-3"></div>
        </div>
    </div>

    <!-- Tercer inciso: Total de precios -->
    <div class="card mb-4">
        <div class="card-body">
            <h3>Suma total de precios</h3>
            <form id="formPrecios">
                <div class="mb-3">
                    <input type="number" step="0.01" class="form-control" id="inputPrecio" placeholder="Ingrese un precio" required min="0">
                </div>
                <button type="submit" class="btn btn-success">Agregar precio</button>
            </form>
            <button id="calcularTotalPrecios" class="btn btn-primary mt-3">Calcular total</button>
            <div id="resultadoPrecios" class="mt-3"></div>
        </div>
    </div>

    <script src="/scripts/ejercicio12.js"></script>  
</body>
</html>