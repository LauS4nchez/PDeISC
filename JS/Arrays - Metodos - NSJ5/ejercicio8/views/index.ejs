<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>Ejercicio 8 - includes()</title>
</head>
<body class="container mt-4">
    <h1>Ejercicio 8 - includes()</h1>

    <!-- Primer inciso: Buscar "admin" -->
    <div class="card mb-4">
        <div class="card-body">
            <h3>Verificar usuario "admin"</h3>
            <form id="formUsuarios">
                <div class="mb-3">
                    <input type="text" class="form-control" id="inputUsuario" placeholder="Ingrese un usuario" required>
                </div>
                <button type="submit" class="btn btn-success">Agregar usuario</button>
            </form>
            <button id="verificarAdmin" class="btn btn-primary mt-3">Verificar admin</button>
            <div id="resultadoUsuarios" class="mt-3"></div>
        </div>
    </div>

    <!-- Segundo inciso: Buscar "verde" -->
    <div class="card mb-4">
        <div class="card-body">
            <h3>Verificar color "verde"</h3>
            <form id="formColores">
                <div class="mb-3">
                    <input type="text" class="form-control" id="inputColor" placeholder="Ingrese un color" required>
                </div>
                <button type="submit" class="btn btn-success">Agregar color</button>
            </form>
            <button id="verificarVerde" class="btn btn-primary mt-3">Verificar verde</button>
            <div id="resultadoColores" class="mt-3"></div>
        </div>
    </div>

    <!-- Tercer inciso: Verificar número antes de agregar -->
    <div class="card mb-4">
        <div class="card-body">
            <h3>Verificar número antes de agregar</h3>
            <form id="formVerificarNumero">
                <div class="mb-3">
                    <input type="number" class="form-control" id="inputVerificarNumero" placeholder="Ingrese un número" required>
                </div>
                <button type="submit" class="btn btn-success">Verificar y agregar</button>
            </form>
            <button id="mostrarNumeros" class="btn btn-primary mt-3">Mostrar números</button>
            <div id="resultadoVerificarNumeros" class="mt-3"></div>
        </div>
    </div>

    <script src="/scripts/ejercicio8.js"></script>  
</body>
</html>