<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>Ejercicio 10 - map()</title>
</head>
<body class="container mt-4">
    <h1>Ejercicio 10 - map()</h1>

    <!-- Primer inciso: Números multiplicados por 3 -->
    <div class="card mb-4">
        <div class="card-body">
            <h3>Números multiplicados por 3</h3>
            <form id="formNumeros">
                <div class="mb-3">
                    <input type="number" class="form-control" id="inputNumero" placeholder="Ingrese un número" required>
                </div>
                <button type="submit" class="btn btn-success">Agregar número</button>
            </form>
            <button id="multiplicarNumeros" class="btn btn-primary mt-3">Multiplicar por 3</button>
            <div id="resultadoNumeros" class="mt-3"></div>
        </div>
    </div>

    <!-- Segundo inciso: Nombres en mayúsculas -->
    <div class="card mb-4">
        <div class="card-body">
            <h3>Nombres en mayúsculas</h3>
            <form id="formNombres">
                <div class="mb-3">
                    <input type="text" class="form-control" id="inputNombre" placeholder="Ingrese un nombre" required>
                </div>
                <button type="submit" class="btn btn-success">Agregar nombre</button>
            </form>
            <button id="mostrarMayusculas" class="btn btn-primary mt-3">Mostrar en mayúsculas</button>
            <div id="resultadoNombres" class="mt-3"></div>
        </div>
    </div>

    <!-- Tercer inciso: Precios con IVA -->
    <div class="card mb-4">
        <div class="card-body">
            <h3>Precios con IVA (21%)</h3>
            <form id="formPrecios">
                <div class="mb-3">
                    <input type="number" step="0.01" class="form-control" id="inputPrecio" placeholder="Ingrese un precio" required min="0">
                </div>
                <button type="submit" class="btn btn-success">Agregar precio</button>
            </form>
            <button id="mostrarPreciosConIva" class="btn btn-primary mt-3">Mostrar con IVA</button>
            <div id="resultadoPrecios" class="mt-3"></div>
        </div>
    </div>

    <script src="/scripts/ejercicio10.js"></script>  
</body>
</html>