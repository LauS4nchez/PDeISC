<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>Ejercicio 13 - sort()</title>
</head>
<body class="container mt-4">
    <h1>Ejercicio 13 - sort()</h1>

    <!-- Primer inciso: Ordenar números -->
    <div class="card mb-4">
        <div class="card-body">
            <h3>Ordenar números</h3>
            <form id="formNumeros">
                <div class="mb-3">
                    <input type="number" class="form-control" id="inputNumero" placeholder="Ingrese un número" required>
                </div>
                <button type="submit" class="btn btn-success">Agregar número</button>
            </form>
            <button id="ordenarNumeros" class="btn btn-primary mt-3">Ordenar de menor a mayor</button>
            <div id="resultadoNumeros" class="mt-3"></div>
        </div>
    </div>

    <!-- Segundo inciso: Ordenar palabras -->
    <div class="card mb-4">
        <div class="card-body">
            <h3>Ordenar palabras alfabéticamente</h3>
            <form id="formPalabras">
                <div class="mb-3">
                    <input type="text" class="form-control" id="inputPalabra" placeholder="Ingrese una palabra" required>
                </div>
                <button type="submit" class="btn btn-success">Agregar palabra</button>
            </form>
            <button id="ordenarPalabras" class="btn btn-primary mt-3">Ordenar alfabéticamente</button>
            <div id="resultadoPalabras" class="mt-3"></div>
        </div>
    </div>

    <!-- Tercer inciso: Ordenar personas por edad -->
    <div class="card mb-4">
        <div class="card-body">
            <h3>Ordenar personas por edad</h3>
            <form id="formPersonas">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <input type="text" class="form-control" id="inputPersonaNombre" placeholder="Nombre" required>
                    </div>
                    <div class="col-md-6 mb-3">
                        <input type="number" class="form-control" id="inputPersonaEdad" placeholder="Edad" required min="0">
                    </div>
                </div>
                <button type="submit" class="btn btn-success">Agregar persona</button>
            </form>
            <button id="ordenarPersonas" class="btn btn-primary mt-3">Ordenar por edad</button>
            <div id="resultadoPersonas" class="mt-3"></div>
        </div>
    </div>

    <script src="/scripts/ejercicio13.js"></script>  
</body>
</html>