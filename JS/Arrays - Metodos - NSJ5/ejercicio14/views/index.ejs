<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>Ejercicio 14 - reverse()</title>
</head>
<body class="container mt-4">
    <h1>Ejercicio 14 - reverse()</h1>

    <!-- Primer inciso: Invertir letras -->
    <div class="card mb-4">
        <div class="card-body">
            <h3>Invertir orden de letras</h3>
            <form id="formLetras">
                <div class="mb-3">
                    <input type="text" class="form-control" id="inputLetra" placeholder="Ingrese una letra" maxlength="1" required>
                </div>
                <button type="submit" class="btn btn-success">Agregar letra</button>
            </form>
            <button id="invertirLetras" class="btn btn-primary mt-3">Invertir orden</button>
            <div id="resultadoLetras" class="mt-3"></div>
        </div>
    </div>

    <!-- Segundo inciso: Invertir números -->
    <div class="card mb-4">
        <div class="card-body">
            <h3>Invertir orden de números</h3>
            <form id="formNumeros">
                <div class="mb-3">
                    <input type="number" class="form-control" id="inputNumero" placeholder="Ingrese un número" required>
                </div>
                <button type="submit" class="btn btn-success">Agregar número</button>
            </form>
            <button id="invertirNumeros" class="btn btn-primary mt-3">Invertir orden</button>
            <div id="resultadoNumeros" class="mt-3"></div>
        </div>
    </div>

    <!-- Tercer inciso: Invertir texto -->
    <div class="card mb-4">
        <div class="card-body">
            <h3>Invertir texto</h3>
            <form id="formTexto">
                <div class="mb-3">
                    <input type="text" class="form-control" id="inputTexto" placeholder="Ingrese un texto" required>
                </div>
                <button type="submit" class="btn btn-success">Guardar texto</button>
            </form>
            <button id="invertirTexto" class="btn btn-primary mt-3">Invertir texto</button>
            <div id="resultadoTexto" class="mt-3"></div>
        </div>
    </div>

    <script src="/scripts/ejercicio14.js"></script>  
</body>
</html>