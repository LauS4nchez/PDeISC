<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>Ejercicio 6 - slice()</title>
</head>
<body class="container mt-4">
    <h1>Ejercicio 6 - slice()</h1>

    <!-- Primer inciso: Copiar primeros 3 números -->
    <div class="card mb-4">
        <div class="card-body">
            <h3>Copiar primeros 3 números</h3>
            <form id="formNumeros">
                <div class="mb-3">
                    <input type="number" class="form-control" id="inputNumero" placeholder="Ingrese un número" required>
                </div>
                <button type="submit" class="btn btn-success">Agregar número</button>
            </form>
            <button id="copiarTres" class="btn btn-primary mt-3">Copiar primeros 3</button>
            <div id="resultadoNumeros" class="mt-3"></div>
        </div>
    </div>

    <!-- Segundo inciso: Copiar películas posiciones 2 a 4 -->
    <div class="card mb-4">
        <div class="card-body">
            <h3>Copiar películas (posición 2 a 4)</h3>
            <button id="copiarPeliculas" class="btn btn-primary">Mostrar copia de películas</button>
            <div id="resultadoPeliculas" class="mt-3"></div>
        </div>
    </div>

    <!-- Tercer inciso: Copiar últimos 3 elementos -->
    <div class="card mb-4">
        <div class="card-body">
            <h3>Copiar últimos 3 elementos</h3>
            <form id="formElementos">
                <div class="mb-3">
                    <input type="text" class="form-control" id="inputElemento" placeholder="Ingrese un elemento" required>
                </div>
                <button type="submit" class="btn btn-success">Agregar elemento</button>
            </form>
            <button id="copiarUltimos" class="btn btn-primary mt-3">Copiar últimos 3</button>
            <div id="resultadoElementos" class="mt-3"></div>
        </div>
    </div>

    <script src="/scripts/ejercicio6.js"></script>  
</body>
</html>