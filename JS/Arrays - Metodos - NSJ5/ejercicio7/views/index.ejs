<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>Ejercicio 7 - indexOf()</title>
</head>
<body class="container mt-4">
    <h1>Ejercicio 7 - indexOf()</h1>

    <!-- Primer inciso: Posición de "perro" -->
    <div class="card mb-4">
        <div class="card-body">
            <h3>Encontrar posición de "perro"</h3>
            <form id="formAnimales">
                <div class="mb-3">
                    <input type="text" class="form-control" id="inputAnimal" placeholder="Ingrese un animal" required>
                </div>
                <button type="submit" class="btn btn-success">Agregar animal</button>
            </form>
            <button id="buscarPerro" class="btn btn-primary mt-3">Buscar "perro"</button>
            <div id="resultadoAnimales" class="mt-3"></div>
        </div>
    </div>

    <!-- Segundo inciso: Buscar número 50 -->
    <div class="card mb-4">
        <div class="card-body">
            <h3>Buscar número 50</h3>
            <form id="formBuscarNumero">
                <div class="mb-3">
                    <input type="number" class="form-control" id="inputBuscarNumero" placeholder="Ingrese un número" required>
                </div>
                <button type="submit" class="btn btn-success">Agregar número</button>
            </form>
            <button id="buscarCincuenta" class="btn btn-primary mt-3">Buscar 50</button>
            <div id="resultadoNumeros" class="mt-3"></div>
        </div>
    </div>

    <!-- Tercer inciso: Buscar Madrid -->
    <div class="card mb-4">
        <div class="card-body">
            <h3>Buscar "Madrid" en ciudades</h3>
            <form id="formCiudades">
                <div class="mb-3">
                    <input type="text" class="form-control" id="inputCiudad" placeholder="Ingrese una ciudad" required>
                </div>
                <button type="submit" class="btn btn-success">Agregar ciudad</button>
            </form>
            <button id="buscarMadrid" class="btn btn-primary mt-3">Buscar Madrid</button>
            <div id="resultadoCiudades" class="mt-3"></div>
        </div>
    </div>

    <script src="/scripts/ejercicio7.js"></script>  
</body>
</html>