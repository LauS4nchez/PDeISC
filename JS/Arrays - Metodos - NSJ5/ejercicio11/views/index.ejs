<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>Ejercicio 11 - filter()</title>
</head>
<body class="container mt-4">
    <h1>Ejercicio 11 - filter()</h1>

    <!-- Primer inciso: Números mayores a 10 -->
    <div class="card mb-4">
        <div class="card-body">
            <h3>Números mayores a 10</h3>
            <form id="formNumeros">
                <div class="mb-3">
                    <input type="number" class="form-control" id="inputNumero" placeholder="Ingrese un número" required>
                </div>
                <button type="submit" class="btn btn-success">Agregar número</button>
            </form>
            <button id="filtrarNumeros" class="btn btn-primary mt-3">Filtrar mayores a 10</button>
            <div id="resultadoNumeros" class="mt-3"></div>
        </div>
    </div>

    <!-- Segundo inciso: Palabras con más de 5 letras -->
    <div class="card mb-4">
        <div class="card-body">
            <h3>Palabras con más de 5 letras</h3>
            <form id="formPalabras">
                <div class="mb-3">
                    <input type="text" class="form-control" id="inputPalabra" placeholder="Ingrese una palabra" required>
                </div>
                <button type="submit" class="btn btn-success">Agregar palabra</button>
            </form>
            <button id="filtrarPalabras" class="btn btn-primary mt-3">Filtrar palabras largas</button>
            <div id="resultadoPalabras" class="mt-3"></div>
        </div>
    </div>

    <!-- Tercer inciso: Usuarios activos -->
    <div class="card mb-4">
        <div class="card-body">
            <h3>Usuarios activos</h3>
            <form id="formUsuarios">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <input type="text" class="form-control" id="inputUsuarioNombre" placeholder="Nombre" required>
                    </div>
                    <div class="col-md-6 mb-3">
                        <select class="form-select" id="inputUsuarioEstado" required>
                            <option value="" disabled selected>Seleccione estado</option>
                            <option value="true">Activo</option>
                            <option value="false">Inactivo</option>
                        </select>
                    </div>
                </div>
                <button type="submit" class="btn btn-success">Agregar usuario</button>
            </form>
            <button id="filtrarUsuarios" class="btn btn-primary mt-3">Mostrar solo activos</button>
            <div id="resultadoUsuarios" class="mt-3"></div>
        </div>
    </div>

    <script src="/scripts/ejercicio11.js"></script>  
</body>
</html>