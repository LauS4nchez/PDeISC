<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>Formulario</title>
</head>
<body>
    <div class="container">
      <br><h1>Formulario</h1><br>

      <div class="row justify-content-center">
        <form action="/enviar" method="POST">
            <div class="mb-3">
              <label for="email" class="form-label">Email</label>
              <input type="email" class="form-control w-25" id="email" name="email" required>
              <div class="form-text">We'll never share your email with anyone else.</div>
            </div>
            <div class="mb-3">
              <label for="pass" class="form-label">Password</label>
              <input type="password" name="pass" class="form-control w-25" id="pass" required>
            </div>
            <div class="mb-3">
              <label for="hobbie" class="form-label">Hobbie</label>
              <input type="text" name="hobbie" class="form-control w-25" id="hobbie" required>
            </div>
            <div class="mb-3">
              <label for="genre" class="form-label">Género</label>
              <input type="text" name="genre" class="form-control w-25" id="genre" required>
            </div>
            <div class="mb-3">
              <label for="school" class="form-label">Escuela</label>
              <input type="text" name="school" class="form-control w-25" id="school" required>
            </div>
            <div class="mb-3">
              <label for="nationality" class="form-label">Nacionalidad</label>
              <input type="text" name="nationality" class="form-control w-25" id="nationality" required>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
      </div>

      <!-- Mostrar los datos enviados -->
      <% if (success && personas.length > 0) { %>
        <div class="mt-5">
          <h2>Datos Registrados:</h2>
          <table class="table table-bordered w-50">
            <thead class="table-dark">
              <tr>
                <th>Email</th>
                <th>Hobbie</th>
                <th>Género</th>
                <th>Escuela</th>
                <th>Nacionalidad</th>
              </tr>
            </thead>
            <tbody>
              <% personas.forEach(persona => { %>
                <tr>
                  <td><%= persona.email %></td>
                  <td><%= persona.hobbie %></td>
                  <td><%= persona.genre %></td>
                  <td><%= persona.school %></td>
                  <td><%= persona.nationality %></td>
                </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
      <% } %>
    </div>
</body>
</html>